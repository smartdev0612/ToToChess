    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000,
            "runtimeExecutable": "C:\\php7\\php.exe"
        },
        { 
            "name": "debug for PHP", 
            "type": "php", 
            "request": "launch", 
            "port": 9000,
            "runtimeExecutable": "C:\\php7\\php.exe"
        } 
    ]
}